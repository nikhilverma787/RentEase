      /   body { background-image: url('assets/media/auth/bg4.jpg'); } [data-bs-theme="dark"] body { background-image: url('assets/media/auth/bg4-dark.jpg'); }
      :css
        body#kt_body.app-blank.bgi-size-cover.bgi-attachment-fixed.bgi-position-center.bgi-no-repeat {
          background: linear-gradient(-45deg,#008000,#96DED1,#23a6d5, #23d5ab);
          background-size: 400% 400%;
          animation: gradient 15s ease infinite !important;
          height: 100vh;
        }
        @keyframes gradient {
          0% {
            background-position: 0% 50%;
          }
          50% {
            background-position: 100% 50%;
          }
          100% {
            background-position: 0% 50%;
          }
        }
      / end::Page bg image
      / begin::Authentication - Sign-in
      .d-flex.flex-column.flex-column-fluid.flex-lg-row
        / begin::Aside
        .d-flex.flex-center.w-lg-50.pt-15.pt-lg-0.px-10
          / begin::Aside
          .d-flex.flex-center.flex-lg-start.flex-column
            / begin::Logo
            %a.mb-7{href: ""}
              %img{alt: "Logo", src: "/v3ux/assets/media/logos/payframe-white-logo.svg", style:"width: 250%;"}/
